<?xml version="1.0"?>
<ruleset name="hm-base">
	<description>WordPress rules for use with hm base</description>

	<!--
	Include all the rules in the WordPress Standard.
	-->
	<rule ref="WordPress-Core" />
	<exclude-pattern>wordpress/*</exclude-pattern>
	<exclude-pattern>content/plugins-mu/s3-uploads/*</exclude-pattern>
	<exclude-pattern>content/plugins-mu/aws-ses-wp-mail/*</exclude-pattern>
	<exclude-pattern>content/plugins-mu/batcache/*</exclude-pattern>
	<exclude-pattern>content/plugins-mu/ludicrousdb/*</exclude-pattern>
	<exclude-pattern>content/plugins-mu/memcached-object-cache/*</exclude-pattern>
	<exclude-pattern>content/plugins-mu/memcached-object-cache-pecl/*</exclude-pattern>
	<exclude-pattern>php-codesniffer/*</exclude-pattern>
	<exclude-pattern>*/index.php</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/.tests/*</exclude-pattern>

	<rule ref="WordPress.PHP.YodaConditions">
		<exclude-pattern>*</exclude-pattern>
	</rule>
</ruleset>
